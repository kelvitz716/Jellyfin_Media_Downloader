# ============================================
# Jellyfin Media Downloader Bot - Configuration
# ============================================

# Telegram API Credentials (required)
# Get these from https://my.telegram.org
API_ID=
API_HASH=
BOT_TOKEN=

# Admin IDs (comma-separated Telegram user IDs)
ADMIN_IDS=1234567890,0987654321

# TMDb API (optional - for enhanced metadata)
# Get from https://www.themoviedb.org/settings/api
TMDB_API_KEY=

# ============================================
# Directory Configuration
# ============================================
# For Docker: use /data/jellyfin (default)
# For local dev: use absolute paths like /home/user/jellyfin_test

BASE_DIR=/data/jellyfin
DOWNLOAD_DIR=/data/jellyfin/Downloads
MOVIES_DIR=/data/jellyfin/Movies
TV_DIR=/data/jellyfin/TV
ANIME_DIR=/data/jellyfin/Anime
MUSIC_DIR=/data/jellyfin/Music
OTHER_DIR=/data/jellyfin/Other
SESSION_NAME=/data/jellyfin/sessions/jellyfin

# ============================================
# Performance Settings
# ============================================
MAX_DOWNLOAD_DURATION=7200
MAX_CONCURRENT_DOWNLOADS=3

# ============================================
# Fuzzy Matching Thresholds
# ============================================
LOW_CONFIDENCE=0.6
HIGH_CONFIDENCE=0.8

# ============================================
# Testing (optional)
# ============================================
# Sample filenames for /test command
FILENAMES="Movie.Title.2024.1080p.WEBRip.mkv,TV.Show.S01E01.720p.mkv"